<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kinhangpoon.filesinsdcard.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:text="Scan Files on SD Card"
        android:textSize="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="109dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save File" />

        <Button
            android:id="@+id/buttonBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 Biggest Files" />

        <Button
            android:id="@+id/buttonAverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Average File Size" />

        <Button
            android:id="@+id/buttonFrequent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequent File Extensions" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
